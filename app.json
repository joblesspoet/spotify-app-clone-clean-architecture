{
  "expo": {
    "name": "shopify-app",
    "slug": "shopify-app",
    "scheme": "shopifyclone",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-font",
        {
          "fonts": [
            "./assets/assets/fonts/Satoshi-Black.otf",
            "./assets/fonts/Satoshi-BlackItalic.otf",
            "./assets/fonts/Satoshi-Bold.otf",
            "./assets/fonts/Satoshi-BoldItalic.otf",
            "./assets/fonts/Satoshi-Italic.otf",
            "./assets/fonts/Satoshi-Light.otf",
            "./assets/fonts/Satoshi-Regular.otf"
          ]
        }
      ],
      "expo-router"
    ]
  }
}
